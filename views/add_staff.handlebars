<div class="container">
	<h2 class="text-center"> Add Staff Member </h2>
	<hr />
	<form name="add_staff"  action="/add_staff" method="post">
		<div class="form-group row">
			<label for="first_name" class="col-xs-2 col-form-label" >First Name: </label>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="first_name" placeholder="First Name">
			</div>
			<label for="last_name" class="col-xs-2 col-form-label" >Last Name: </label>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="last_name" placeholder="Last Name">
			</div>
		</div>
		<div class="form-group row">
			<label for="username" class="col-xs-2 col-form-label" >Username: </label>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="username" placeholder="Username">
			</div>
			<label for="email" class="col-xs-2 col-form-label" >Email: </label>
			<div class="col-sm-3">
				<input type="email" class="form-control" name="email" placeholder="Email	">
			</div>
		</div>
		<div class="form-group row">
			<label for="phone_number" class="col-xs-2 col-form-label" >Phone Number: </label>
			<div class="col-sm-3">
				<input type="text" class="form-control" name="phone_number" placeholder="Phone Number">
			</div>
			<label for="type" class="col-xs-2 col-form-label" >Type: 	</label>
			<div class="col-sm-3">
				<select class="form-control" name="type">
						<option value="Help Desk"> Help Desk </option>
						<option value="Labs"> Labs </option>
						<option value="Hybrid"> Hybrid </option>
						<option value="Lead"> Lead </option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="password" class="col-xs-2 col-form-label" >Password: </label>
			<div class="col-sm-3">
				<input type="password" class="form-control" name="password" placeholder="Password">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" value="Submit" class="btnbtn-default">Submit</button>
		</div>
	</form>
  </div>
</form>

</div>






</body>
</html>
